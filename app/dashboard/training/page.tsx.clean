// Components
const RoadmapStep = ({ step, isLast = false, onStartStep }: { 
  step: RoadmapStep; 
  isLast?: boolean; 
  onStartStep?: (stepId: string) => void;
}) => {
  const [isExpanded, setIsExpanded] = useState(false);
  
  const statusStyles = {
    completed: {
      bg: 'bg-green-100',
      text: 'text-green-800',
      icon: <CheckCircle2 className="h-5 w-5 text-green-500" />,
      label: 'Completed'
    },
    'in-progress': {
      bg: 'bg-blue-50',
      text: 'text-blue-800',
      icon: <Loader2 className="h-5 w-5 animate-spin text-blue-500" />,
      label: 'In Progress'
    },
    pending: {
      bg: 'bg-gray-50',
      text: 'text-gray-600',
      icon: <Clock className="h-5 w-5 text-gray-400" />,
      label: 'Pending'
    }
  };

  const status = statusStyles[step.status];

  return (
    <div className={`relative pl-6 pb-6 ${!isLast ? 'border-l-2 border-gray-200' : ''}`}>
      <div className="absolute -left-2.5 top-0 h-5 w-5 rounded-full bg-white border-2 border-blue-500 flex items-center justify-center">
        <div className="h-2.5 w-2.5 rounded-full bg-blue-500"></div>
      </div>
      <div className={`p-4 rounded-lg ${status.bg} border ${status.text} border-opacity-20`}>
        <div className="flex justify-between items-start">
          <div className="flex-1">
            <h3 className="font-medium">{step.title}</h3>
            <p className="text-sm mt-1">{step.description}</p>
            {step.resources && step.resources.length > 0 && (
              <div className="mt-3 space-y-2">
                <button 
                  onClick={() => setIsExpanded(!isExpanded)}
                  className="flex items-center text-sm hover:text-blue-600 transition-colors"
                >
                  <BookOpenIcon className="h-4 w-4 mr-2" />
                  <span>Resources ({step.resources.length})</span>
                  <ChevronDown className={`ml-1 h-4 w-4 transition-transform ${isExpanded ? 'rotate-180' : ''}`} />
                </button>
                {isExpanded && (
                  <div className="ml-6 space-y-2 mt-2">
                    {step.resources.map((resource) => (
                      <a
                        key={resource.id}
                        href={resource.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        className="flex items-center text-sm text-blue-600 hover:underline"
                      >
                        <ExternalLink className="h-3.5 w-3.5 mr-1.5" />
                        {resource.title}
                        {resource.duration && (
                          <span className="ml-2 text-xs text-gray-500">
                            {resource.duration}
                          </span>
                        )}
                      </a>
                    ))}
                  </div>
                )}
              </div>
            )}
          </div>
          <div className="flex items-center space-x-2 ml-4">
            <span className={`text-xs font-medium px-2.5 py-0.5 rounded-full ${status.bg} ${status.text}`}>
              {status.label}
            </span>
            <Button
              variant="outline"
              size="sm"
              onClick={() => onStartStep?.(step.id)}
              className="whitespace-nowrap"
            >
              {step.status === 'completed' ? 'Review' : step.status === 'in-progress' ? 'Continue' : 'Start'}
            </Button>
          </div>
        </div>
      </div>
    </div>
  );
};

