  requiredSkills: string[];
  averageSalary: string;
  growthRate: string;
}

interface TrainingData {
  skillGaps: SkillGap[];
  recommendations: TrainingRecommendation[];
  roadmap: RoadmapStep[];
  dreamJob?: DreamJob;
}

interface Video {
  videoId: string;
  title: string;
  channelTitle: string;
  thumbnail: string;
}

