// Interfaces
interface SkillGap {
  skill: string;
  currentLevel: number;
  targetLevel: number;
  importance: string;
  demand: string;
  avgSalaryIncrease?: string;
}

interface TrainingRecommendation {
  id: string;
  title: string;
  provider: string;
  duration: string;
  level: 'Beginner' | 'Intermediate' | 'Advanced';
  rating: number;
  url: string;
  targetSkills?: string[];
  relevance?: string;
  cost?: string;
}

interface RoadmapStep {
  id: string;
  title: string;
  description: string;
  duration: string;
  status: 'completed' | 'in-progress' | 'pending';
  order: number;
  resources?: Array<{
    id: string;
    title: string;
    type: 'course' | 'article' | 'video' | 'project' | 'certification';
    url: string;
    duration?: string;
  }>;
}

interface DreamJob {
  id: string;
  title: string;
