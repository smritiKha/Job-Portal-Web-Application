    {
      id: `rec-${jobId}-2`,
      title: `${job.requiredSkills[0]} Masterclass`,
      provider: 'Udemy',
      duration: '30 hours',
      level: 'Advanced',
      rating: 4.6,
      url: 'https://www.udemy.com/course/react-the-complete-guide-incl-redux/',
      targetSkills: [job.requiredSkills[0]],
      relevance: 'High',
      cost: '$12.99'
    },
    {
      id: `rec-${jobId}-3`,
      title: 'System Design Interview Preparation',
      provider: 'Educative',
      duration: '20 hours',
      level: 'Advanced',
      rating: 4.8,
      url: 'https://www.educative.io/courses/grokking-the-system-design-interview',
      targetSkills: ['System Design', 'Scalability', 'Databases'],
      relevance: 'Medium',
      cost: 'Premium'
    }
  ];

  // Generate learning path
  const roadmap: RoadmapStep[] = [
    {
      id: 'fundamentals',
      title: 'Master the Fundamentals',
      description: 'Build a strong foundation in core concepts',
      duration: '4 weeks',
      status: 'pending',
      order: 1,
      resources: [
        {
          id: 'fund-1',
          title: 'Computer Science Fundamentals',
          type: 'course',
          url: 'https://www.coursera.org/specializations/cs-fundamentals',
          duration: '4 weeks'
        }
      ]
    },
    {
      id: 'core-skills',
